<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/progress">
        <shape
            android:innerRadiusRatio="2.8"
            android:shape="ring"
            android:thickness="10dp"
            android:useLevel="true">
            <gradient
                android:centerColor="@color/faintgrey"
                android:endColor="@color/faintgrey"
                android:startColor="@color/faintgrey"
                android:type="sweep" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">

        <shape
            android:innerRadiusRatio="2.8"
            android:shape="ring"
            android:thickness="10dp"
            android:useLevel="true">
            <gradient
                android:centerColor="@color/orange_progress"
                android:endColor="@color/orange_progress"
                android:startColor="@color/orange_progress"
                android:type="sweep" />
        </shape>
    </item>
</layer-list>